---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "À propos";

const identity = {
    firstName: "Guillaume SERE",
    country: "France",
    occupation: "Développeur",
    hobbies: ["Le Code", " La Musique", "Lunette virtuelle"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const skillColor = "aquamarine";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <style define:vars={{ skillColor, fontWeight, textCase }}>
            h1 {
                color: rgb(1, 149, 255);
            }
            .skill {
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                text-transform: var(--textCase);
            }
        </style>
    </head>
    <body>
        <Header />

        <h1>{pageTitle}</h1>
        <h2>Qui je suis</h2>
        <img class="picture-profil" src="../images/profil.jpg" alt="Photo de Guillaume SERE" />
        <ul>
            <li>Je m'appel {identity.firstName}.</li>
            <li>
                Je vie en {identity.country} et je suis  {
                    identity.occupation
                }.
            </li>
            {
                identity.hobbies.length >= 2 && (
                    <li>
                        Mes passe-temps sont {identity.hobbies[0]},
                        {identity.hobbies[1]}, et {identity.hobbies[2]}
                    </li>
                )
            }
        </ul>
        <p>Mes skills sont :</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>

        <Footer />
        <script>
          import "../scripts/menu.js";
        </script>
    </body>
</html>
