---
const { platform, username } = Astro.props;
---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<a href={`https://www.${platform}.com/${username}`} target="_blank" rel="noopener noreferrer">
    <i class={`fab fa-${platform}`}></i> {platform}</a>

<style>
    a {
        padding: 0.5rem 1rem;
        color: white;
        background: linear-gradient(120deg, #08538c 0%, #55e28b 100%);
        text-decoration: none;
        border-radius: .5em;
    }
    a:hover{
        background: linear-gradient(120deg, #2deb99 0%, #3b8cc9 100%);
    }
</style>
